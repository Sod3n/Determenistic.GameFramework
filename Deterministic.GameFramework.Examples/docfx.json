{
  "metadata": [
    {
      "src": [
        {
          "src": "../TurnBasedPrototype.Server.Core",
          "files": ["TurnBasedPrototype.Server.Core.csproj"]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": ["articles/**.md", "articles/**/toc.yml", "toc.yml", "*.md"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appTitle": "TurnBasedPrototype Examples & Docs",
      "_appName": "Examples & Documentation",
      "_enableSearch": true
    }
  }
}
